<%= form_with model: [@item, @item.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %><br>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
